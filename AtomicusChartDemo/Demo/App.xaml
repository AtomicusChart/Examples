<Application x:Class="AtomicusChart.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/DataTemplates.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/ScrollViewerStyles.xaml"/>
				<ResourceDictionary Source="ResourceDictionaries/MenuStyles.xaml"/>
				<ResourceDictionary Source="ResourceDictionaries/SourceCodeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="fonts/#Saira"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
